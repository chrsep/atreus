enum ReconStatus {
  SCANNING
  IDLE
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id         Int      @id @default(autoincrement())
  name       String
  bountyLink String   @default("")
  icon       String   @default("")
  domains    Domain[]
}

model Domain {
  name      String   @id
  confirmed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  lastDomainEnumeration   DateTime?
  domainEnumerationStatus ReconStatus @default(IDLE)
  lastPortScan            DateTime?
  portScanStatus          ReconStatus @default(IDLE)

  company        Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId      Int
  rootDomain     Domain?   @relation("DomainToSubDomain", fields: [rootDomainName], references: [name], onDelete: Cascade)
  rootDomainName String?
  subDomains     Domain[]  @relation("DomainToSubDomain")
  services       Service[]
}

model Service {
  port        Int
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  cnameRecords String[]
  aRecords     String[]

  domain        Domain          @relation(fields: [domainName], references: [name], onDelete: Cascade)
  domainName    String
  probeResponse ProbeResponse[]

  @@id([port, domainName])
}

model ProbeResponse {
  bodySHA String @id

  url       String
  host      String
  method    String
  scheme    String
  webserver String
  timestamp DateTime

  title        String
  header       String
  body         String
  statusCode   Int
  contentType  String
  path         String
  responseTime String

  service           Service @relation(fields: [servicePort, serviceDomainName], references: [port, domainName])
  servicePort       Int
  serviceDomainName String
  techs             Tech[]
}

model Tech {
  name          String          @id
  probeResponse ProbeResponse[]
}
