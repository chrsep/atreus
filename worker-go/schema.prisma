// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
    provider = "go run github.com/prisma/prisma-client-go"
}

model Company {
  id         Int      @id @default(autoincrement())
  name       String
  bountyLink String   @default("")
  icon       String   @default("")
  domains    Domain[]
}

model Domain {
  name      String   @id
  ip        String   @default("")
  confirmed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  company        Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId      Int
  rootDomain     Domain?   @relation("DomainToSubDomain", fields: [rootDomainName], references: [name], onDelete: Cascade)
  rootDomainName String?
  subDomains     Domain[]  @relation("DomainToSubDomain")
  services       Service[]
}

model Service {
  id          Int      @id @default(autoincrement())
  port        Int
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  domain     Domain @relation(fields: [domainName], references: [name], onDelete: Cascade)
  domainName String
}
